{
  "name": "react-theme",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run init && webpack --progress --profile --colors --display-error-details && npm run assets",

    "init": "npm run clean:dist",
    "clean": "npm run clean:build && npm run clean:dist",
    "clean:build": "shx rm -rf build/* && mkdir -f build",
    "clean:dist": "shx rm -rf dist",
    "assets": "npm run css && npm run php",
    "css": "npm run css:vendor && npm run css:custom",
    "css:vendor": "concat -o build/vendor.css node_modules/bootstrap/dist/css/bootstrap.css",
    "css:custom": "shx cp assets/style/style.css build/style.css",
    "php": "shx cp assets/php/*.php build"
  },
  "keywords": [],
  "author": "",
  "license": "GPLv2",
  "dependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.21",
    "babel-loader": "^6.2",
    "babel-polyfill": "^6.23",
    "babel-preset-es2015": "^6.18",
    "babel-preset-react": "^6.16",
    "babel-preset-stage-2": "^6.18",
    "css-loader": "^0.26",
    "extract-text-webpack-plugin": "^1.0",
    "node-sass": "^4.3",
    "postcss-loader": "^1.2",
    "react": "^15.4",
    "react-addons-css-transition-group": "^15.4",
    "react-dom": "^15.4",
    "react-redux": "^5.0",
    "react-router": "^3.0",
    "redux": "^3.6",
    "redux-logger": "^2.7",
    "redux-promise-middleware": "^4.2",
    "redux-thunk": "^2.1",
    "sass-loader": "^4.1",
    "style-loader": "^0.13",
    "webpack": "^1.14"
  },
  "devDependencies": {
    "bootstrap": "^3.3.7",
    "concat": "^1.0.3",
    "shx": "^0.2.2"
  }
}
